<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bootcamp.eceran">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Menu.LainnyaActivity" />
        <activity android:name=".Menu.MusicActivity" />
        <activity android:name=".Menu.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Paket_User.Login" />
        <activity android:name=".Paket_User.Registrasi" />
        <activity
            android:name=".MenuUtama.MenuAwal"
            android:label="@string/title_activity_menu_awal"
            android:theme="@style/AppTheme" />
        <activity android:name=".Paket_User.DetailUser" />
        <activity android:name=".Menu.DetailTempatActivity" />
        <activity android:name=".MenuAdmin.PilihanMenu" />
        <activity android:name=".MenuAdmin.Tambah" />
        <activity android:name=".MenuAdmin.EditHapus" />
        <activity android:name=".MenuAdmin.MenuEdit"></activity>
    </application>

</manifest>